{
  baseKey:"CreateBlockStorageForHost.Block",
  serviceId:"CreateBlockStorageForHost",
  items:{
    storageType:{
      type:"assetType.vipr.blockStorageType",
      lockable:true,
      initialValue:"exclusive"
    },

    host:{
      type:"assetType.vipr.host"
    },

    virtualArray:{
      type:"assetType.vipr.virtualArray",
      lockable: true
    },
    
    virtualPool:{
      type:"assetType.vipr.blockVirtualPool",
      lockable: true
    },

    project:{
      type:"assetType.vipr.project",
      lockable: true
    },
    
    volumes:{
      type:"table",
      items:{
        name:{
          type:"text",
          validation:{
            min:2,
            max:128
          }
        },
        size:{
          type:"storageSize",
          validation:{
            min:1
          }
        },
        numberOfVolumes:{
          type:"number",
          initialValue: "1",
          validation:{
              min:1
          }
        }
      }
    },
    
    advanced:{
      type:"group",
      collapsed:true,
      items:{
        consistencyGroup:{
          type:"assetType.vipr.consistencyGroup",
          required:false
        },

        hlu: {
          type:"number",
          lockable: true,
          required: false,
          initialValue: "-1",
          validation: {
            min:-1
          }
        },
        
        minPaths: {
          type:"number",
          lockable: true,
          required: false,
          validation: {
            min:1,
            max:65535
          }
        },
        
        maxPaths: {
          type:"number",
          lockable: true,
          required: false,
          validation: {
            min:1,
            max:65535
          }
        },
        
        pathsPerInitiator: {
          type:"number",
          lockable: true,
          required: false,
          validation: {
            min:1,
            max:65535
          }
        }
        
      }
    }
    
  }
  
}
